<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/red_light"/>
            <stroke android:width="0dp" android:color="@color/red_light"/>
            <padding
                android:left="6dp"
                android:right="6dp"
                android:bottom="6dp"
                android:top="6dp"/>
            <corners
                android:radius="5dp"/>

        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0dp" android:color="@android:color/transparent"/>
            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:top="5dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>